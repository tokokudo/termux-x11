package com.winlator.xserver.extensions;

import android.util.Log;
import java.util.HashMap;

public class PresentExtension {
    private final HashMap<Integer, String> dummyEvents = new HashMap<>();

    public PresentExtension() {
        Log.i("PresentExtension", "ğŸ§© PresentExtension initialized");
    }

    public void onPresent(int windowId) {
        Log.i("PresentExtension", "ğŸ–¼ï¸ Present triggered for window: " + windowId);
    }

    public void registerEvent(int id, int windowId) {
        dummyEvents.put(id, "Window-" + windowId);
        Log.i("PresentExtension", "ğŸ“Œ Event registered: id=" + id + ", window=" + windowId);
    }

    public void unregisterEvent(int id) {
        dummyEvents.remove(id);
        Log.i("PresentExtension", "ğŸ—‘ï¸ Event unregistered: id=" + id);
    }

    public boolean isEventRegistered(int id) {
        return dummyEvents.containsKey(id);
    }
}